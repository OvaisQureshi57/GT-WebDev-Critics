        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "build",
        "lib": [
            "es6"
        ],
        "skipLibCheck": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true
